{% extends '/back/base.html.twig' %}

{% block title %}Packpersonnalise{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 40px; overflow-x: auto;">
        <div class="row">
            <div class="col-md-3" style="padding-right: 20px;"> {# Ajoutez un padding à droite pour créer un espace #}
                {# Ajoutez votre barre latérale ici #}
            </div>
            <div class="col-md-9">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom Packperso</th>
                                <th>Type Pack</th>
                                <th>Description Pack</th>
                                <th>Prix</th>
                                <th>Date</th>
                                <th>Image</th>
                                <th>show</th>
                                <th>edit</th>
                                <th>delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for packpersonnalise in packpersonnalises %}
                                <tr>
                                    <td>{{ packpersonnalise.id_packperso }}</td>
                                    <td>{{ packpersonnalise.nomPackperso }}</td>
                                    <td>{{ packpersonnalise.getTypePack() }}</td> {# Utilisez getTypePack() pour obtenir le nom du type de pack #}
                                    <td>{{ packpersonnalise.descriptionPack }}</td>
                                    <td>{{ packpersonnalise.prix }}</td>
                                    <td>{{ packpersonnalise.date ? packpersonnalise.date|date('Y-m-d') : '' }}</td>
                                    <td><img src="{{ asset('uploads/images/' ~ packpersonnalise.Image) }}" alt="Image" width="200"></td>
                                    <td>
                                        <a href="{{ path('app_packpersonnalise_show', {'id': packpersonnalise.id_packperso}) }}" class="btn btn-primary">Show</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_packpersonnalise_edit', {'id': packpersonnalise.id_packperso}) }}" class="btn btn-secondary">Edit</a>
                                    </td>
                                    <td>
                                        <form action="{{ path('app_packpersonnalise_delete', {'id': packpersonnalise.id_packperso}) }}" method="post">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ packpersonnalise.id_packperso) }}">
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">No records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_packpersonnalise_new') }}" class="btn btn-success">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
